generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" // Use "sqlite" if you're using SQLite
  url      = env("DATABASE_URL")
}

// Enums
enum IncidentType {
  drain
  citizen
}

enum Audience {
  ops
  public
}

enum RiskTier {
  SAFE
  MEDIUM
  HIGH
}

// Models
model Forecast {
  id         String   @id @default(uuid())
  zone       String
  rainProb   Float
  rainAmount Float?
  riskScore  Float    @default(0)
  timestamp  DateTime @default(now())

  @@index([zone, timestamp])
}

model Incident {
  id          String       @id @default(uuid())
  type        IncidentType
  description String
  zone        String
  photoUrl    String?
  timestamp   DateTime     @default(now())

  @@index([zone, timestamp])
}

model SocialIncident {
  id        String   @id @default(uuid())
  text      String
  user      String
  zone      String
  riskFlag  Boolean  @default(false)
  timestamp DateTime @default(now())

  @@index([zone, timestamp])
}

model Alert {
  id        String   @id @default(uuid())
  audience  Audience
  message   String
  riskTier  RiskTier
  createdAt DateTime @default(now())
}

model OpsLog {
  id         String   @id @default(uuid())
  cycleId    String
  step       String
  status     String
  durationMs Int
  timestamp  DateTime @default(now())

  @@index([cycleId, timestamp])
}
